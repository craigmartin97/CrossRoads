<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="40dp">

        <requestFocus />

        <ImageView
            android:id="@+id/imageViewCBlack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cblack"
            android:contentDescription="@null"/>

        <ImageView
            android:id="@+id/imageViewCRGreen"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/imageViewCBlack"
            android:layout_centerHorizontal="true"
            android:src="@drawable/crgreentext"
            android:contentDescription="@null"/>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageViewCRGreen"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bebasneueregular"
            android:text="@string/create_account"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/linearLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:background="@drawable/edit_text_rounded"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/email_icon"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFFFFF"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textEmailAddress"
                android:layout_margin="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#808080"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutEmail"
            android:background="@drawable/edit_text_rounded"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/lock_icon"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/editTextPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFFFFF"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textPassword"
                android:layout_margin="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#808080" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutPasswordConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutPassword"
            android:background="@drawable/edit_text_rounded"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@drawable/lock_icon"
                android:contentDescription="@null"/>

            <EditText
                android:id="@+id/editTextPasswordConfirmLogin"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFFFFF"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textPassword"
                android:layout_margin="6dp"
                android:textColor="@color/colorPrimaryDark"
                android:textColorHint="#808080" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutPasswordConfirm"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="12dp"
            android:buttonTint="#2bbc9b"
            android:text="@string/by_checking_this_box_and_signing_up_you_are_agreeing_to_our_terms_and_conditions_and_privacy_policy"
            android:textColor="#2bbc9b" />

        <TextView
            android:id="@+id/textViewSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/Already_user"
            android:textAlignment="center"
            android:textColor="#1a8cff"
            android:textColorLink="#1a8cff" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewSignIn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:background="#2bbc9b"
            android:text="@string/register"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/textViewTermsAndConditionsAndPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/checkBox"
            android:layout_below="@+id/buttonRegister"
            android:layout_marginBottom="10dp"
            android:text="@string/TermsAndConditionsAndPrivacyPolicy"
            android:textColor="#1a8cff"
            android:textColorLink="#1a8cff"
            android:visibility="visible" />

    </RelativeLayout>

</ScrollView>